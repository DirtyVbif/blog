{{ wrapper.addClass('profile-info').open() }}
    <h4 class="profile-info__title">Your active sessions:</h3>
    <ul class="profile-sessions">
        <li class="profile-sessions__item profile-sessions__item_header">
            <span>Browser</span>
            <span>Platform</span>
            <span>Last active</span>
            <span>IP address</span>
        </li>
        {% for item in items %}
        <li class="profile-sessions__item">
            <span>{{ item.browser }}</span>
            <span>{{ item.platform }}</span>
            <span>{{ item.date }}</span>
            <span>{{ item.ip }}</span>
            <form action="/user" method="POST">
                <input type="hidden" name="type" value="close-session" required>
                <input type="hidden" name="sesid" value="{{ item.sesid }}" required>
                <input type="hidden" name="title" required
                    value="{{ item.browser ~ ' ' ~ item.platform ~ ' (' ~ item.ip ~ ')' }}">
                <button class="profile-sessions__close">
                    <input type="submit" class="profile-sessions__submit" value="" title="{{ t('Close session') }}">
                    {{ usesvg('/images/icons/cross.svg#svg-icon-cross') }}
                </button>
            </form>
        </li>
        {% endfor %}
    </ul>
{{ wrapper.close() }}