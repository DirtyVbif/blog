{{ wrapper.addClass('comment comment_full').open() }}
    <header class="comment__header">
        <span class="comment__author">{{ name }}</span>
        <span class="comment__date">{{ date }}</span>
    </header>
    <p class="comment__body">{{ body }}</p>
    {% if admin_access %}
        <footer>
            {{ link('/blog/comment/' ~ cid ~ '/approve').label(t('approve')) }}
            {{ link('/blog/comment/' ~ cid ~ '/delete').label(t('delete')) }}
        </footer>
    {% endif %}
{{ wrapper.close() }}