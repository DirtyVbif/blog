{% set class = 'form form_login' %}

{{ wrapper.addClass('form-wrapper form-wrapper_login').open() }}
    <form action="/user" method="POST" {{ id('form-login', true) }} class="{{ class }}">
        {{ csrf() }}
        <input type="hidden" name="type" value="login">
        <div class="{{ classlistToString(class, '', '__field') }}">
            <label for="form-login--mail" class="{{ classlistToString(class, '', '__label') }}">Логин:</label>
            <input
                type="email"
                {{ id('form-login--mail', true) }}
                name="mail"
                maxlength="256"
                class="{{ classlistToString(class, '', '__input') }}"
                required>
        </div>
        <div class="{{ classlistToString(class, '', '__field') }}">
            <label for="form-login--password" class="{{ classlistToString(class, '', '__label') }}">Пароль:</label>
            <input
                type="password"
                {{ id('form-login--password', true) }}
                name="password"
                minlength="8"
                maxlength="40"
                class="{{ classlistToString(class, '', '__input') }}"
                required>
        </div>
        <footer class="form__footer form_login__footer">
            <div class="{{ classlistToString(class, '', ['__field', '__field_checkbox']) }}">
                <label for="form-blog-article--remember-me"
                    class="{{ classlistToString(class, '', ['__label', '__label_checkbox']) }}">
                    <input type="checkbox"
                        {{ id('form-blog-article--remember-me', true) }}
                        name="remember_me"
                        class="{{ classlistToString(class, '', '__checkbox') }}"
                        value="1" checked>
                        <span class="{{ classlistToString(class, '', '__checkbox-switcher') }}"></span>
                        <span>{{ t('Remember me') }}</span>
                </label>
            </div>

            <div class="{{ classlistToString(class, '', ['__field', '__field_submit']) }}">
                <input type="submit" value="{{ t('Sign in') }}" class="btn btn_transparent {{ classlistToString(class, '', '__submit') }}">
            </div>
        </footer>
    </form>
{{ wrapper.close() }}